{{>layouts/header}}

<style>
    .center-text {
        text-align: center;
        color: black !important;
        font-weight: bold;
        font-size: 15px;
        margin: 10px 0;
    }

    /* 테이블 스타일 설정 */
    table {
        color: black !important;
    }

    /* 링크 스타일 설정 */
    a {
        text-decoration: none;
    }

    /* 추가 스타일 설정 */
    .webtoon-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .webtoon-card {
        width: calc(20% - 20px);
        margin: 10px 0;
        text-align: center;
    }

    .webtoon-card img {
        max-width: 100%;
    }

    /* 장르 이름 스타일 설정 */
    .genre-title {
        font-size: 35px;
        color: white;
        font-weight: bold;
        background-color: #04B45F;
        padding: 5px;
        margin-bottom: 10px;
        text-align: center;
    }
    
</style>

<div class="container">
    <p class="genre-title">{{genreKorean}}</p>
    <div class="webtoon-container">
        {{#webtoonRankList}}
        <div class="webtoon-card">
            <div class="center-text" style="font-size: 18px; font-weight: bold;font-family: '나눔고딕', sans-serif; background-color: #E6F8E0; color: white; padding: 5px;">
                {{webtoonRank}} 위
            </div>
            <a href="/webtoons/{{webtoonId}}">
                <img src="{{thumbnailUrl}}" alt="Thumbnail">
                <p class="center-text">{{title}}</p>
            </a>
        </div>
        {{/webtoonRankList}}
    </div>
</div>

{{>layouts/footer}}
